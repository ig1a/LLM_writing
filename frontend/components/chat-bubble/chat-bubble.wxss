/* components/chat-bubble/chat-bubble.wxss */

.chat-bubble {
  padding: 8rpx 24rpx;
  margin-bottom: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 最后一条消息添加更多的底部空间 */
.last-bubble {
  margin-bottom: 24rpx;
}

.bubble-container {
  display: flex;
  max-width: 100%;
}

/* 用户消息布局（右对齐） */
.user-container {
  flex-direction: row-reverse;
  justify-content: flex-start;
}

/* AI消息布局（左对齐） */
.ai-container {
  flex-direction: row;
  justify-content: flex-start;
}

/* 头像样式 */
.avatar-container {
  width: 80rpx;
  height: 80rpx;
  margin: 0 12rpx;
  flex-shrink: 0;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 消息内容区域 */
.content-container {
  max-width: 70%;
  display: flex;
  flex-direction: column;
}

.user-content {
  align-items: flex-end;
}

.ai-content {
  align-items: flex-start;
}

/* 消息气泡 */
.message {
  padding: 16rpx 24rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 100%;
  box-sizing: border-box;
}

/* 用户消息气泡样式 */
.user-container .message {
  background-color: #6200EE; /* Material Design 主色调 */
  color: white;
  border-bottom-right-radius: 4rpx;
}

/* AI消息气泡样式 */
.ai-container .message {
  background-color: #f1f1f1;
  color: #333333;
  border-bottom-left-radius: 4rpx;
}

/* 时间显示 */
.time-container {
  margin-top: 8rpx;
}

.time {
  font-size: 20rpx;
  color: #999999;
}
