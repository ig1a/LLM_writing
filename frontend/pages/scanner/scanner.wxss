/* pages/scanner/scanner.wxss */

.scanner-container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.9);
}

/* 相机视图 */
.camera-view {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* 无权限相机显示 */
.no-camera-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.no-camera-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: white;
}

.no-camera-text {
  font-size: 36rpx;
  color: white;
  margin-bottom: 40rpx;
  text-align: center;
}

.auth-btn {
  width: 300rpx;
  margin-top: 20rpx;
}

/* 扫码区域 */
.scan-area {
  position: absolute;
  width: 500rpx;
  height: 200rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 扫描边框 */
.scan-border {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  background-color: transparent;
}

.top-left {
  top: 0;
  left: 0;
  border-top: 6rpx solid #6200EE;
  border-left: 6rpx solid #6200EE;
}

.top-right {
  top: 0;
  right: 0;
  border-top: 6rpx solid #6200EE;
  border-right: 6rpx solid #6200EE;
}

.bottom-left {
  bottom: 0;
  left: 0;
  border-bottom: 6rpx solid #6200EE;
  border-left: 6rpx solid #6200EE;
}

.bottom-right {
  bottom: 0;
  right: 0;
  border-bottom: 6rpx solid #6200EE;
  border-right: 6rpx solid #6200EE;
}

/* 扫描线 */
.scan-line {
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #6200EE;
  top: 0;
  left: 0;
  box-shadow: 0 0 8rpx 1rpx rgba(98, 0, 238, 0.8);
}

/* 提示文本 */
.tip-container {
  position: absolute;
  bottom: 300rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.tip-text {
  font-size: 28rpx;
  color: white;
  text-align: center;
}

/* 底部按钮 */
.bottom-container {
  position: absolute;
  bottom: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.scan-btn {
  width: 80%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #6200EE;
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(98, 0, 238, 0.3);
}

.scan-btn[disabled] {
  background-color: rgba(98, 0, 238, 0.5);
  color: rgba(255, 255, 255, 0.6);
}

.cancel-btn {
  width: 80%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: transparent;
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

/* 手动输入区域 */
.manual-input-container {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.manual-input-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-right: 12rpx;
}

.manual-input-link {
  font-size: 26rpx;
  color: #6200EE;
  text-decoration: underline;
}

/* 手动输入模态框 */
.manual-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.manual-modal-content {
  width: 80%;
  background-color: white;
  border-radius: 8rpx;
  overflow: hidden;
}

.manual-modal-header {
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.manual-modal-title {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.87);
}

.manual-modal-body {
  padding: 40rpx 24rpx;
}

.manual-input {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  font-size: 32rpx;
}

.manual-modal-footer {
  padding: 24rpx;
  display: flex;
  justify-content: flex-end;
}

.cancel-modal-btn {
  margin-right: 20rpx;
  color: #6200EE;
}

.confirm-modal-btn {
  background-color: #6200EE;
  color: white;
}
