/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 顶部标题区域 */
.header-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}

.logo-container {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.logo {
  width: 100%;
  height: 100%;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #6200EE;
  margin-bottom: 40rpx;
}

/* 中间介绍区域 */
.intro-container {
  width: 100%;
  margin: 40rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

.intro-text {
  display: block;
  margin: 24rpx 0 40rpx;
  line-height: 1.6;
  color: rgba(0, 0, 0, 0.87);
}

/* 功能特点列表 */
.features-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(98, 0, 238, 0.1);
  border-radius: 50%;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.87);
  margin-right: 16rpx;
  min-width: 160rpx;
}

.feature-description {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  flex: 1;
}

/* 底部按钮区域 */
.bottom-container {
  width: 100%;
  padding: 40rpx 0;
  margin-top: auto;
}

.scan-button {
  width: 100%;
  height: 90rpx;
  background-color: #6200EE;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(98, 0, 238, 0.3);
}

.scan-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(98, 0, 238, 0.2);
}

.scan-text {
  margin-left: 8rpx;
}
